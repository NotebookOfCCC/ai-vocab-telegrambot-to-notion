# Telegram Bot Token (get from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Claude API Key (get from console.anthropic.com)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Notion Integration Token (get from notion.so/my-integrations)
NOTION_API_KEY=your_notion_integration_token_here

# Notion Database ID (get from Notion page URL)
NOTION_DATABASE_ID=your_notion_database_id_here

# Your Telegram User ID (optional, for restricting bot access)
# Get your ID by messaging @userinfobot on Telegram
ALLOWED_USER_IDS=

# Review Bot Configuration
# Create a separate bot via @BotFather for review messages
REVIEW_BOT_TOKEN=your_review_bot_token_here

# Your Telegram User ID for receiving review messages
REVIEW_USER_ID=your_telegram_user_id

# Timezone for scheduled reviews (e.g., Asia/Shanghai, Europe/Berlin, America/New_York)
TIMEZONE=Asia/Shanghai

# Habit Bot Configuration
# Create a separate bot via @BotFather for habit reminders
HABITS_BOT_TOKEN=your_habits_bot_token_here

# Your Telegram User ID for receiving habit reminders
HABITS_USER_ID=your_telegram_user_id

# Notion Database IDs for habit tracking
# Reminders DB: stores your daily tasks/reminders
HABITS_REMINDERS_DB_ID=your_reminders_database_id

# Tracking DB: stores daily habit completion (Date, Listened, Spoke, Video, Tasks)
HABITS_TRACKING_DB_ID=your_tracking_database_id

# YouTube Data API Key (get from Google Cloud Console)
# Enable "YouTube Data API v3" in your project
YOUTUBE_API_KEY=your_youtube_api_key_here
